<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/img1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/img2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img1"
        android:layout_marginTop="100dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img3"
        app:layout_constraintStart_toStartOf="@+id/img2"
        app:layout_constraintTop_toTopOf="@id/img2"
        app:layout_constraintEnd_toEndOf="@id/img2"
        app:layout_constraintBottom_toBottomOf="@id/img2"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your option"
        android:textSize="16sp"
        android:textColor="#0C46C4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img2"
        android:layout_marginTop="30dp"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnMangerUser"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/img4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRoll"
        android:layout_margin="30dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imgExUser"
        android:background="@drawable/admin"
        app:layout_constraintStart_toStartOf="@+id/btnMangerUser"
        app:layout_constraintEnd_toEndOf="@+id/btnMangerUser"
        app:layout_constraintTop_toTopOf="@+id/btnMangerUser"
        app:layout_constraintBottom_toBottomOf="@+id/btnMangerUser"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/btnMangerUser"
        app:layout_constraintEnd_toEndOf="@+id/btnMangerUser"
        android:text="Managerment User"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMangerUser"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnMangerStudent"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/img4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRoll"
        android:layout_margin="30dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imgExStudent"
        android:background="@drawable/img_student"
        app:layout_constraintStart_toStartOf="@+id/btnMangerStudent"
        app:layout_constraintEnd_toEndOf="@+id/btnMangerStudent"
        app:layout_constraintTop_toTopOf="@+id/btnMangerStudent"
        app:layout_constraintBottom_toBottomOf="@+id/btnMangerStudent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/btnMangerStudent"
        app:layout_constraintEnd_toEndOf="@+id/btnMangerStudent"
        android:text="Managerment Student"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/btnMangerStudent"/>
</androidx.constraintlayout.widget.ConstraintLayout>